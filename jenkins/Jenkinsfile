pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'building the application...'
                git url: 'https://github.com/Epstein-Conbus/simple-node-js-react-npm-app.git', branch: 'master'
            }
        }
        stage('test') {
            steps {
                echo 'testing the application...'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploying the application...'
                sh 'npm install'
                sh 'npm run start'
            }
        }
    }
}